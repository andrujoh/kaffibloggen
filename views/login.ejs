<% include ./partials/header %>

<header class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Logg inn</h1>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <form action="/login" method="post">
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Brukernavn</label>
            <input type="text" class="form-control" placeholder="Brukernavn" name="username" required data-validation-required-message="Skriv ditt brukernavn.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Passord</label>
            <input type="password" class="form-control" placeholder="Passord" name="password" required data-validation-required-message="Skriv passordet ditt.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="row">
          <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-default btn-block">Logg inn</button>
          </div>
        </div>
      </form>
      <a href="/blogs">Tilbake</a>
    </div>
  </div>
</div>

<% include ./partials/footer %>