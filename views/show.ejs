<% include ./partials/header %>

<header class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>KaffiBloggen</h1>
          <hr class="small">
          <span class="subheading">Et sted for kaffenytere</span>
        </div>
      </div>
    </div>
  </div>
</header>

<% include ./partials/flashes %>

<article>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="jumbotron">
          <img class="img-responsive img-center" src="<%= blog.image %>">
        </div>
        <div class="post-heading text-center">
          <h1><%= blog.title %></h1>
          <hr class="small">
          <span class="meta">Skrevet av <em><a href="javascript:void(0)"><%= blog.author.username %></a></em> <%= blog.created.toDateString() %></span>
        </div>
        <div class="blogContent">
          <p><%- blog.blogpost %></p>
        </div>
        
        <% if (currentUser && blog.author.id.equals(currentUser._id)) { %>
          <a class="btn btn-info" href="/blogs/<%= blog._id %>/edit">Rediger post</a>
        <% } %>
        
      </div>
    </div>
  </div>
</article>

    <hr>

<% include ./partials/footer %>