<% include ./partials/header %>

<!-- Page Header -->
<header class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>KaffiBloggen</h1>
          <hr class="small">
          <span class="subheading">Et sted for kaffenytere</span>
        </div>
      </div>
    </div>
  </div>
</header>

<% include ./partials/flashes %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <% blogs.forEach((blog) => { %>
        <div class="post-preview">
          <a href="/blogs/<%= blog._id %>">
            <h2 class="post-title"><%= blog.title %></h2>
          </a>
          <%
            var months = [
              "januar", "februar", "mars", "april", "juni", "juli", "august", "september", "november", "desember"
            ];
            
            var day = blog.created.getDate();
            var month = months[blog.created.getMonth()];
            var year = blog.created.getFullYear();
          %>
          <p class="post-meta">Skrevet av <em><a href="javascript:void(0)"><%= blog.author.username %></a></em> <%= day + ' ' + month + ' ' + year %></p>
          <a href="/blogs/<%= blog._id %>">
            <img class="img-responsive img-center" src="<%= blog.image %>">
          </a>
          <p><%- blog.blogpost.substring(0, 150) %> [...]</p>
          <a class="blogLink" href="/blogs/<%= blog._id %>">Les hele artikkelen</a>
        </div>
        <hr>
      <% }) %>
      
    </div>
  </div>
</div>

<% include ./partials/footer %>