<% include ./partials/header %>

<header class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Rediger bloggpost</h1>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container-full">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Tittel</label>
            <input type="text" class="form-control" value="<%= blog.title %>" name="blog[title]" required data-validation-required-message="Skriv en tittel.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Bilde</label>
            <input type="text" class="form-control" value="<%= blog.image %>" name="blog[image]">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Bloggpost</label>
            <textarea rows="15" class="form-control" name="blog[blogpost]" required data-validation-required-message="Vennligst skriv noe."><%= blog.blogpost %></textarea>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="row">
          <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-default">Oppdater</button>
          </div>
        </div>
        
      </form>
    </div>
  </div>
</div>

<% include ./partials/footer %>