<% include ./partials/header %>

<header class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Ny bloggpost</h1>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
</header>

<% include ./partials/flashes %>

<div class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12">
      <form action="/blogs" method="POST">
        
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Tittel</label>
            <input type="text" class="form-control" placeholder="Tittel" name="blog[title]" required data-validation-required-message="Skriv en tittel.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Bilde</label>
            <input type="text" class="form-control" placeholder="Bilde Link" name="blog[image]" required data-validation-required-message="Vennligst legg til et bilde.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Bloggpost</label>
            <textarea rows="15" id="summernote" class="form-control" placeholder="Skriv tankene her" name="blog[blogpost]" required data-validation-required-message="Vennligst skriv noe.">
              
            </textarea>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="row">
          <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-default">Publiser</button>
          </div>
        </div>
        
      </form>
    </div>
  </div>
</div>

<% include ./partials/footer %>